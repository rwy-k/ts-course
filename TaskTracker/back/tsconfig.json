{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",

    "rootDir": "./src",
    "outDir": "./dist",
 
    "types": ["node", "jest"],
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
