{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",

        "module": "nodenext",
        "target": "esnext",

        "types": ["node", "jest"],
        "sourceMap": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": false,
        "strict": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "skipLibCheck": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
